<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonicaPaez_Examen.vistaLogin">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#254099">
                <Label Text="Examen" HorizontalTextAlignment="Center" FontSize="25" TextColor="#fff"/>
            </Frame>

            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"></Image>

            <Entry x:Name="txtUsuario" Placeholder="Usuario" HorizontalTextAlignment="Center" FontSize="25"/>
            <Entry x:Name="txtPasswd" IsPassword="True" Placeholder="Password" HorizontalTextAlignment="Center"/>

            <Button x:Name="btnAbrir" Clicked="btnAbrir_Clicked" Text="Acceder" 
                    BackgroundColor="#254099" TextColor="#fff" FontSize="25"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>